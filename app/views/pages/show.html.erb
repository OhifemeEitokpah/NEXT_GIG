<div class="max-w-4xl mx-auto mt-10 p-4">
  <h1 class="text-3xl font-bold mb-4"><%= @event.title %></h1>

  #Placehold.co
  
  <%= image_tag "https://placehold.co/800x400?text=#{CGI.escape(@event.title)}", class: "w-full h-auto object-cover rounded-lg mb-6" %>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="md:col-span-2 space-y-4">
      <p class="text-gray-700"><%= @event.description %></p>
      <p><strong>Date:</strong> <%= @event.date %></p>
      <p><strong>Time:</strong> <%= @event.time.strftime("%I:%M %p") %></p>
      <p><strong>Venue:</strong> <%= @event.venue.name %>, <%= @event.venue.city %></p>
      <p><strong>Slots:</strong> <%= @event.max_slots %></p>

      <% if @event.venue.user.present? %>
        <p><strong>Hosted by:</strong> <%= @event.venue.user.name %></p>
      <% end %>
    </div>

    <div class="border p-4 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-2">Book this event</h2>
      <%= form_with model: [@event, Booking.new], local: true do |f| %>
        <div class="mb-2">
          <%= f.label :message, "Message to Host" %>
          <%= f.text_area :message, rows: 3, class: "w-full border rounded p-2" %>
        </div>
        <%= f.submit "Request Booking", class: "w-full bg-red-500 text-white p-2 rounded hover:bg-red-600" %>
      <% end %>
    </div>
  </div>
</div>
