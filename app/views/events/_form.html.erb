<%# Form  with simpleform should have :title, :description, :date, :time, :max_slots, :photo (cloudinary) %>
<%= simple_form_for @event, html: { class: 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :title, label: 'Event Title', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :description, label: 'Event Description', input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group row">
    <div class="col-md-6">
    <%= f.input :date, label: 'Event Date', as: :string, input_html: { data: { controller: "datepicker" } } %>
    </div>
    <div class="col-md-6">
    <%= f.input :time, label: 'Event Time', as: :time, discard_minute: true, input_html: { class: 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
  </div>
  <div class="form-group">
    <%= f.input :max_slots, label: 'Maximum Slots', input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :photo, label: 'Event Photo', as: :file, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>

  <% if @event.photo.attached? %>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2>Current Photo</h2>
      <%= cl_image_tag @event.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
  </div>
<% end %>
<% end %>
